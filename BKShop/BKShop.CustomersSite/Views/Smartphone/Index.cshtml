@model HomeViewModel
<div class="content">
    <div class="container">
        <h1 id="sanpham" class="text-center">
            ĐIỆN THOẠI
        </h1>
        <div class="current-position1">
            <a asp-controller="smartphone" asp-action="index">Điện thoại</a>
        </div>
        <div class=" row row-cols-5 items">
            @if (Model.Products.Count() != 0)
            {


                @foreach (var item in Model.Products)
                {
                    <div class="col item">
                        <a asp-controller="home" asp-action="detail" asp-route-Id="@item.Id" asp-route-Color="@item.Color">
                            <div class="item__img" style="background-image: url(/themes/img/@item.Image);"></div>
                            <h4 class="item__name">@item.Name</h4>
                            <div class="item__price d-flex-end">
                                <span class="item__price-old">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"),"{0:c}",@item.Price)</span>
                                <span class="item__price-current">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"),"{0:c}",@item.Price)</span>
                            </div>
                            <div class="item__rating">
                                <span class="item__rating-star">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </span> 10 đánh giá
                            </div>
                        </a>
                        <!-- <a href="" class="btn btn-primary item__btn">Mua</a> -->
                    </div>
                }
            }
            else
            {
                <p style="transform: translateX(220%);">Hết hàng</p>

            }




        </div>
        <!-- <div class="see-more">Xem thêm sản phẩm</div> -->
        <div class="item__pagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item ">
                        <a onclick="event.preventDefault()" class="page-link" href="<?= DOCUMENT_ROOT . " /dienthoai/hang?hang =" . $_GET['hang'] . " &page=" . ($data['page'] - 1) ?>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item "><a class="page-link" href="" ?>1</a></li>
                    <li class="page-item page-active"><a class="page-link" href="" ?>2</a></li>
                    <li class="page-item "><a class="page-link" href="" ?>3</a></li>
                    <li class="page-item ">
                        <a onclick="event.preventDefault()" class="page-link" href="<?= DOCUMENT_ROOT . " /dienthoai/hang?hang =" . $_GET['hang'] . " &page=" . ($data['page'] + 1) ?>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
